# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.WordleController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)



# Wordle html
GET /start                          controllers.WordleController.game()
GET /new/:input                     controllers.WordleController.newgame(input: Int)
GET /play/:input                    controllers.WordleController.gameinput(input: String)
GET /play                           controllers.WordleController.redirectToGame()
GET /stop                           controllers.WordleController.stopGame()
GET /end                            controllers.WordleController.backToRules()

# Keyboard html
GET /keyboard                       controllers.WordleController.getKeyboard()

# Gameboard json
GET /gameboard                      controllers.WordleController.getGameboard()